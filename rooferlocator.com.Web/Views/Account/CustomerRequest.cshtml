@using Abp.Web.Mvc.Extensions
@using Microsoft.Owin.Security
@model CreditsHero.Messaging.Requests.Dtos.GetInquiryResults
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <!--HEADER BEGIN-->
    <div class="row">
        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-sm-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 center-align"
                 style="box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);background-image: -ms-linear-gradient(top, #19447D 20%, #2080BE 100%);">
                <a href="/Account/Login"><img src="~/images/rooferlocatorlogo.gif" /></a>
                <span style="width:100%;text-align:center;padding-left:45px;">
                    <a href="/Account/Login" style="text-align: center; color: white; vertical-align: bottom;">Home</a>
                    <span style="text-align: center; color: white; vertical-align: bottom;">&nbsp;|&nbsp;</span>
                    <a href="#AboutView" style="text-align: center; color: white; vertical-align: bottom;" onclick="showInfo('AboutView');">About Us</a>
                    <span style="text-align: center; color: white; vertical-align: bottom;">&nbsp;|&nbsp;</span>
                    <a href="#ContactView" style="text-align: center; color: white; vertical-align: bottom;" onclick="showInfo('ContactView');">Contact Us</a>
                </span>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-sm-1"></div>
        </div>
    </div>
    <!--HEADER END-->
    <!--CONTENT/MAIN BEGIN-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12"
                 style="padding-top: 15px; box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);margin-top:-9px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:7px;padding-right:7px;padding-top:5px;text-align:center;">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
                    <div class="well bs-component col-lg-8 col-md-8 col-sm-8 col-xs-8">

                        <!--INQUIRY REQUEST BEGIN-->
                        <form id="InquiryForm" action="@(Url.Action("SendRequest", "Account"))?returnUrl=/" method="POST">
                            <input hidden name="RoofTypeValues" value="@Request.Form["RoofTypeValues"]" />
                            <input hidden name="TypeOfService" value="@Request.Form["TypeOfService"]" />
                            <input hidden name="TimeOfRepairValues" value="@Request.Form["TimeOfRepairValues"]" />
                            <input hidden name="StateValues" value="@Request.Form["StateValues"]" />
                            <input hidden name="City" value="@Request.Form["City"]" />
                            <h3>We found companies matching your search criteria</h3>
                            <!--INQUIRY RESULTS BEGIN-->
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-1 table-responsive" style="text-align:center;">
                                    <table class="table table-striped table-bordered table-condensed" id="ResultsArea" style="width:100%">
                                        <thead></thead>
                                        <tbody>
                                            <tr>
                                                <td height="35" align="center" colspan="2">
                                                    <h4>Inquiry Criteria</h4>
                                                </td>
                                            </tr>
                                            <tr><td align="right"><b>Type of Roof:</b></td><td>@Request.Form["RoofTypeValues"]</td></tr>
                                            <tr><td align="right"><b>Type of Service:</b></td><td>@Request.Form["TypeOfService"]</td></tr>
                                            <tr><td align="right"><b>Time of Repair:</b></td><td>@Request.Form["TimeOfRepairValues"]</td></tr>
                                            <tr><td align="right"><b>State:</b></td><td>@Request.Form["StateValues"]</td></tr>
                                            <tr><td align="right"><b>City/Region:</b></td><td>@Request.Form["City"]</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!--INQUIRY RESULTS END-->
                            <!--REQUEST FORM BEGIN-->
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-right" style="text-align:center; border:1px solid black; border-radius:5px;">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <h4>Please provide your contact information to continue...</h4>
                                        </div>
                                    </div>
                                    <div class="row" style="text-align:center;">
                                        @Html.Hidden("InquiryId", Model.InquiryId)
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="FirstName" value=""
                                                   placeholder="First Name">
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="LastName" value=""
                                                   placeholder="Last Name">
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="EmailAddress" value=""
                                                   placeholder="Email Address">
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="PhoneNumber" value=""
                                                   placeholder="Phone Number">
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="Budget" value=""
                                                   placeholder="Budget">
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left:20px;padding-right:20px;">
                                            <input type="text" class="form-control" name="Comments" value=""
                                                   placeholder="Comments">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <button id="RequestButton" type="submit" src="~/App/Main/images/search2.jpg"
                                                    width="100" height="32"
                                                    style="border: 0px white solid;"
                                                    class="btn btn-primary">
                                                <i class="fa fa-sign-in"></i> Send Request
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--REQUEST FORM END-->
                        </form>
                        <!--INQUIRY REQUEST END-->

                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"></div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
        </div>
    </div>
    <!--CONTENT/MAIN END-->
    <!--ABOUT US END-->
    <div id="AboutView" style="display:none;" class="row">
        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-sm-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 center-align"
                 style="padding-top: 10px;padding-left:5px; padding-right:5px; text-align: center;box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);margin-top:-9px;">
                @Html.Partial("AboutView")
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
        </div>
    </div>
    <!--ABOUT US END-->
    <!--CONTACT US BEGIN-->
    <div id="ContactView" style="display:none;" class="row">
        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-sm-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 center-align"
                 style="padding-top: 10px;padding-left:5px; padding-right:5px; text-align: center;box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);margin-top:-9px;">
                @Html.Partial("ContactView")
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
        </div>
    </div>
    <!--CONTACT US END-->
    <!--TERMS BEGIN-->
    <div id="TermsView" style="display:none;" class="row">
        <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-sm-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 center-align"
                 style="padding-top: 10px;padding-left:5px; padding-right:5px; text-align: center;box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);margin-top:-9px;">
                @Html.Partial("TermsView")
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
        </div>
    </div>
    <!--TERMS END-->
    <!--FOOTER BEGIN-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 center-align"
                 style="padding-top: 15px; box-shadow: 5px 0px 5px -4px rgba(31,73,125,0.8), -5px 0px 8px -5px rgba(31,73,125,0.8);margin-top:-9px;">
                <div style="background-image:url('/images/footer-bg.gif'); background-repeat:repeat-x;color:white;padding-top:10px;padding-bottom:10px;">
                    <a href="@Url.Action("Register")" style="color:white;padding-left:10px;padding-right:10px;padding-top:10px;padding-bottom:10px;">Register</a> |
                    <a href="/Account/Login#terms" style="color:white;padding-left:10px;padding-right:10px;padding-top:10px;padding-bottom:10px;">Terms</a> |
                    <a href="/Account/Login#Login" style="color:white;padding-left:10px;padding-right:10px;padding-top:10px;padding-bottom:10px;">Login</a> |
                    <a href="/Account/Login#Contact" style="color:white;padding-left:10px;padding-right:10px;padding-top:10px;padding-bottom:10px;">Contact</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
        </div>
    </div>
    <!--FOOTER END-->
</div>

