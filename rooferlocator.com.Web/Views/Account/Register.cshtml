@using Abp.Web.Mvc.Extensions
@using Microsoft.Owin.Security
@model rooferlocator.com.Web.Models.Account.RegisterViewModel
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}

<script>
    function showLogin() {
        document.getElementById('LoginArea').style.display = 'block';
        document.getElementById('ImageSlider').style.display = 'none';
        document.getElementById('SearchArea').style.display = 'none';
        if (document.getElementById('InquiryView') != null) document.getElementById('InquiryView').style.display = 'none';
        if (document.getElementById('RequestView') != null) document.getElementById('RequestView').style.display = 'none';
        document.getElementById('AboutView').style.display='none';
        document.getElementById('ContactView').style.display='none';
        document.getElementById('TermsView').style.display='none';
    }

    function showHome() {
        document.getElementById('LoginArea').style.display = 'none';
        document.getElementById('ImageSlider').style.display = 'block';
        document.getElementById('SearchArea').style.display = 'block';
        if (document.getElementById('InquiryView')!= null) document.getElementById('InquiryView').style.display = 'none';
        if (document.getElementById('RequestView') != null) document.getElementById('RequestView').style.display = 'none';
        document.getElementById('AboutView').style.display='none';
        document.getElementById('ContactView').style.display='none';
        document.getElementById('TermsView').style.display='none';
    }

    function showInfo(viewName){
        document.getElementById('AboutView').style.display='none';
        document.getElementById('ContactView').style.display='none';
        document.getElementById('TermsView').style.display='none';
        document.getElementById(viewName).style.display='block';
    }

    //Need to get the CreditsHero CompanyId for RooferLocator
    chCompanyId = "@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:CompanyId"]";
</script>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <!--CONTENT/MAIN BEGIN-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
                     style="padding-left:7px;padding-right:7px;padding-top:10%;text-align:center;background-color:black;opacity:.70; border-radius:5px;max-width:500px;">
                    
                        <form class="form-horizontal" action="@(Url.Action("Register","Account"))" method="POST">
                            <fieldset>
                                <legend>Register <small>(part 1 of 3)</small></legend>

                                @if (@ViewBag.ErrorMessage != null)
                                    {
                                    <div class="alert alert-danger">
                                        <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                                    </div>
                                    }

                                <input type="hidden" name="IsExternalLogin" value="@Model.IsExternalLogin.ToString()" />
                                
                                <div class="form-group">
                                    <div style="padding:0px;margin:0px;">
                                        <label><b>First Name</b></label>
                                    </div>
                                    <div class="form-body ">
                                        <input type="text" class="form-control" name="Name"
                                               value="@Model.Name" placeholder="Enter first name here"
                                               required maxlength="@rooferlocator.com.Users.User.MaxNameLength">
                                    </div>
                                </div>

                                <div>
                                    <div style="padding:0px;margin:0px;">
                                        <label><b>Last Name</b></label>
                                    </div>
                                    <div class="form-body ">
                                        <input type="text" class="form-control" name="Surname"
                                               value="@Model.Surname" placeholder="Enter last name here"
                                               required maxlength="@rooferlocator.com.Users.User.MaxSurnameLength">
                                    </div>
                                </div>

                                <div>
                                    <div style="padding:0px;margin:0px;">
                                        <label><b>Email</b></label>
                                    </div>
                                    <div class="form-body ">
                                        <input type="email" class="form-control" name="EmailAddress"
                                               value="@Model.EmailAddress" placeholder="Enter email address here"
                                               required maxlength="@rooferlocator.com.Users.User.MaxEmailAddressLength">
                                    </div>
                                </div>

                                <div>
                                    <div style="padding:0px;margin:0px;">
                                        <label><b>Username</b></label>
                                    </div>
                                    <div class="form-body ">
                                        <input type="text" class="form-control" name="UserName"
                                               value="@Model.UserName" placeholder="Enter username here"
                                               required maxlength="@rooferlocator.com.Users.User.MaxUserNameLength">
                                    </div>
                                </div>

                                <div>
                                    <div style="padding:0px;margin:0px;">
                                        <label><b>Password</b></label>
                                    </div>
                                    <div class="form-body ">
                                        <input type="password" class="form-control" name="Password"
                                               placeholder="Enter password here" required
                                               maxlength="@rooferlocator.com.Users.User.MaxPlainPasswordLength">
                                    </div>
                                </div>

                                <div>
                                    <div class=" col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center;">

                                        <button id="RegisterButton" type="submit" class="button button-border button-light button-circle" data-scrollto="#section-works" data-easing="easeInOutExpo" data-speed="1250" data-offset="70">Register</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1"></div>
            </div>
        </div>
    </div>
    <!--CONTENT/MAIN END-->
</div>
