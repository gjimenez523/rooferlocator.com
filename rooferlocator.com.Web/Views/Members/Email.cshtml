@using Abp.Web.Mvc.Extensions
@using rooferlocator.com.MultiTenancy
@*@model Abp.Application.Services.Dto.ListResultOutput<rooferlocator.com.MultiTenancy.Dto.TenantListDto>
    *@
    @model rooferlocator.com.Common.Members.Dtos.GetMembersOutput
    @section scripts
    {
    @Html.IncludeScript("~/Views/Members/Email.js")
    }

<script>
        //Need to get the CreditsHero CompanyId for RooferLocator
        chCompanyId = '@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:CompanyId"];'
        chEmailTo = '@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:AdminEmailAddress"];'
</script>

@using (Html.BeginForm("SendAdminEmail", "Members", FormMethod.Post, null))
{
    <div>
        <div class="portlet box red-soft">
            <div class="portlet-title">
                <div class="caption">
                    <i class="glyphicon glyphicon-envelope"></i>
                    <span>Email Information</span>
                </div>
                <div class="actions">
                </div>
            </div>
            <!--BEGIN MEMBER LIST-->
            <div id="List" class="portlet-body form " style="display:block;">
                <div class="portlet-body form ">
                    <form role="form">
                        <div class="table-responsive" style="padding:10px;">
                            <table class="table table-striped table-bordered table-hover">
                                <thead class="flip-content">
                                    <tr>
                                        <th>
                                            <h6>To:</h6>
                                        </th>
                                        <th>
                                            <h6>Administrator</h6>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><b>Message</b></td>
                                        <td>
                                            <textarea id="txtMessage" name="txtMessage" rows="10" cols="70" class="form-control"></textarea>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <button type="submit" class="btn red"> <i class="fa "></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--END MEMBER LIST-->
            <!--BEGIN MEMBER DETAILS-->
            <div id="Details" class="portlet-body form " style="display:none;">
            </div>
            <!--END MEMBER DETAILS-->
        </div>
    </div>
}
