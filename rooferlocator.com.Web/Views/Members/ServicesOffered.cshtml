@using Abp.Web.Mvc.Extensions
@using rooferlocator.com.MultiTenancy
@*@model Abp.Application.Services.Dto.ListResultOutput<rooferlocator.com.MultiTenancy.Dto.TenantListDto>
    *@
    @model rooferlocator.com.Common.Members.Dtos.GetMembersOutput
    @section scripts
    {
    @Html.IncludeScript("~/Views/Members/ServicesOffered.js")
    }
    <script>
        //Need to get the CreditsHero CompanyId for RooferLocator
        chCompanyId = '@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:CompanyId"]';
        chRoofTypeId = '@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:RoofTypeId"]';
        chServiceTypeId= '@System.Web.Configuration.WebConfigurationManager.AppSettings["creditsHero:ServiceTypeId"]';
    </script>
    <div ng-controller="app.views.common.types.servicesoffered as vm">
        <div class="portlet box red-soft">
            <div class="portlet-title">
                <div class="caption">
                    <i class="glyphicon glyphicon-star-empty"></i>
                    <span>Services Management</span>
                </div>
                <div class="actions">
                    <div class="portlet-input input-inline input-medium">
                        <div class="input-group">
                            <input type="text" class="form-control input-circle-left" placeholder="search...">
                            <span class="input-group-btn">
                                <button class="btn btn-circle-right btn-default" type="submit">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <!--BEGIN ROOFTYPES LIST-->
            <div class="portlet portlet-sortable box red-soft">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="glyphicon glyphicon-star-empty"></i>
                        <span>Type of Roof</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="hide">
                        </a>
                        <a ng-click="vm.refreshAgreement()" class="reload">
                        </a>
                        <a href="javascript:;" class="fullscreen"></a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>

                <div id="RoofTypeList" class="portlet-body form " style="display:block;">
                    <div class="portlet-body form ">
                        <form role="form">
                            <div class="table-responsive">
                                <table class=" table table-striped table-bordered table-hover">
                                    <thead class="flip-content">
                                        <tr>
                                            <th>
                                                <h6>Description</h6>
                                            </th>
                                            <th>
                                                <h6>Action</h6>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="types in vm.rooftypes">
                                            <td><b>{{types.description}}</b></td>
                                            <td style="margin:0px;">
                                                <button ng-click="vm.addRoofType(types)" type="button" class="btn red"> <i class="fa reload"></i> Add</button>
                                                <button ng-click="vm.deleteRoofType(types)" type="button" class="btn red"> <i class="fa reload"></i> Delete</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--END ROOFTYPES LIST-->
            <!--BEGIN SERVICETYPES LIST-->
            <div class="portlet portlet-sortable box red-soft">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="glyphicon glyphicon-star-empty"></i>
                        <span>Type of Service</span>
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="hide">
                        </a>
                        <a ng-click="vm.refreshAgreement()" class="reload">
                        </a>
                        <a href="javascript:;" class="fullscreen"></a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>

                <div id="ServiceList" class="portlet-body form " style="display:block;">
                    <div class="portlet-body form ">
                        <form role="form">
                            <div class="table-responsive">
                                <table class=" table table-striped table-bordered table-hover">
                                    <thead class="flip-content">
                                        <tr>
                                            <th>
                                                <h6>Description</h6>
                                            </th>
                                            <th>
                                                <h6>Action</h6>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="types in vm.servicetypes">
                                            <td><b>{{types.description}}</b></td>
                                            <td style="margin:0px;">
                                                <button ng-click="vm.addServiceType(types)" type="button" class="btn red"> <i class="fa reload"></i> Add</button>
                                                <button ng-click="vm.deleteServiceType(types)" type="button" class="btn red"> <i class="fa reload"></i> Delete</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--END SERVICETYPES LIST-->

        </div>
    </div>
